{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "setupFiles": ["dotenv/config"],
  "testTimeout": 15000,
  "testMatch": ["<rootDir>/src/server/__tests__/**/*.test.ts"],
  "moduleNameMapper": {
    "^@Utils/(.*)$": "<rootDir>/utils/$1",
    "^@Types$": "<rootDir>/src/types.ts$",
    "^@Public$": "<rootDir>../client/public/$1"
  }
}
