{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "../../dist/server",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@Utils/*": ["utils/*"],
      "@Types": ["../types.ts"],
      "@Public": ["../client/public/*"]
    }
  },
  "include": ["**/*.ts"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
