{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "../../dist/client",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@Common/*": ["common/*"],
      "@Types": ["../types.ts"],
      "@Public": ["public/*"]
    }
  },
  "include": ["**/*.ts"]
}
